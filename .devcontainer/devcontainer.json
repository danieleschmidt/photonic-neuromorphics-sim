{\n  \"name\": \"Photonic Neuromorphics Development\",\n  \"image\": \"mcr.microsoft.com/devcontainers/python:3.9-bullseye\",\n  \n  \"features\": {\n    \"ghcr.io/devcontainers/features/git:1\": {},\n    \"ghcr.io/devcontainers/features/github-cli:1\": {},\n    \"ghcr.io/devcontainers/features/docker-in-docker:2\": {},\n    \"ghcr.io/devcontainers/features/node:1\": {\n      \"version\": \"18\"\n    }\n  },\n  \n  \"containerEnv\": {\n    \"PYTHONPATH\": \"${containerWorkspaceFolder}/src\",\n    \"PYTHONDONTWRITEBYTECODE\": \"1\",\n    \"PYTHONUNBUFFERED\": \"1\"\n  },\n  \n  \"runArgs\": [\n    \"--privileged\"\n  ],\n  \n  \"mounts\": [\n    \"source=photonic-venv,target=/opt/venv,type=volume\"\n  ],\n  \n  \"postCreateCommand\": \"bash .devcontainer/setup.sh\",\n  \n  \"customizations\": {\n    \"vscode\": {\n      \"extensions\": [\n        \"ms-python.python\",\n        \"ms-python.pylint\",\n        \"ms-python.black-formatter\",\n        \"ms-python.isort\",\n        \"ms-toolsai.jupyter\",\n        \"redhat.vscode-yaml\",\n        \"ms-vscode.makefile-tools\",\n        \"eamodio.gitlens\",\n        \"GitHub.copilot\",\n        \"ms-vscode.vscode-json\",\n        \"bradlc.vscode-tailwindcss\",\n        \"ms-vscode-remote.remote-containers\"\n      ],\n      \"settings\": {\n        \"python.defaultInterpreterPath\": \"/opt/venv/bin/python\",\n        \"python.terminal.activateEnvironment\": false,\n        \"python.linting.enabled\": true,\n        \"python.linting.pylintEnabled\": true,\n        \"python.formatting.provider\": \"black\",\n        \"python.sortImports.path\": \"/opt/venv/bin/isort\",\n        \"editor.formatOnSave\": true,\n        \"editor.codeActionsOnSave\": {\n          \"source.organizeImports\": true\n        },\n        \"files.exclude\": {\n          \"**/__pycache__\": true,\n          \"**/*.pyc\": true,\n          \"**/.pytest_cache\": true,\n          \"**/.coverage\": true,\n          \"**/htmlcov\": true\n        }\n      }\n    }\n  },\n  \n  \"forwardPorts\": [8888, 8000, 3000],\n  \"portsAttributes\": {\n    \"8888\": {\n      \"label\": \"Jupyter Lab\",\n      \"onAutoForward\": \"notify\"\n    },\n    \"8000\": {\n      \"label\": \"Development Server\",\n      \"onAutoForward\": \"openPreview\"\n    }\n  },\n  \n  \"remoteUser\": \"vscode\",\n  \"workspaceFolder\": \"/workspaces/photonic-neuromorphics-sim\"\n}