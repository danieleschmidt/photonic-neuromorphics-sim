# Photonic Neuromorphics Simulation Framework - Environment Variables Template\n# Copy this file to .env and customize the values for your environment\n\n# =============================================================================\n# SIMULATION CONFIGURATION\n# =============================================================================\n\n# Default simulation parameters\nPHOTONIC_WAVELENGTH=1550e-9          # Default wavelength in meters (1550 nm)\nPHOTONIC_POWER_DBM=0                 # Default optical power in dBm\nSIMULATION_TEMPERATURE=300            # Default temperature in Kelvin (27°C)\nSIMULATION_TIMESTEP=1e-12            # Default simulation timestep in seconds (1 ps)\n\n# Simulation accuracy settings\nTOLERANCE_OPTICAL=1e-6               # Optical simulation convergence tolerance\nTOLERANCE_ELECTRICAL=1e-9            # Electrical simulation convergence tolerance\nMAX_ITERATIONS=10000                  # Maximum solver iterations\n\n# =============================================================================\n# PHOTONIC DEVICE PARAMETERS\n# =============================================================================\n\n# Waveguide properties\nWAVEGUIDE_WIDTH=450e-9               # Default waveguide width in meters (450 nm)\nWAVEGUIDE_HEIGHT=220e-9              # Default waveguide height in meters (220 nm)\nWAVEGUIDE_LOSS_DB_CM=0.1             # Propagation loss in dB/cm\nWAVEGUIDE_INDEX=2.4                  # Effective refractive index\n\n# Coupling parameters\nCOUPLING_GAP=200e-9                  # Default coupling gap in meters (200 nm)\nCOUPLING_EFFICIENCY=0.9              # Default coupling efficiency\n\n# Detector parameters\nDETECTOR_RESPONSIVITY=0.8            # Photodetector responsivity in A/W\nDETECTOR_DARK_CURRENT=1e-9           # Dark current in amperes (1 nA)\nDETECTOR_CAPACITANCE=10e-15          # Junction capacitance in farads (10 fF)\n\n# =============================================================================\n# PROCESS DESIGN KIT (PDK) CONFIGURATION\n# =============================================================================\n\n# Primary PDK selection\nDEFAULT_PDK=SiEPIC_EBeam_PDK         # Options: SiEPIC_EBeam_PDK, SkyWater130, Custom\nPDK_PATH=/opt/pdks                   # Path to PDK libraries\n\n# Foundry-specific parameters\nFOUNDRY_PROCESS=SOI_220nm            # Silicon-on-insulator 220nm process\nMETAL_LAYERS=5                       # Number of metal layers available\nVIA_SIZE=0.15e-6                     # Minimum via size in meters (150 nm)\n\n# Design rule parameters\nMIN_FEATURE_SIZE=45e-9               # Minimum feature size in meters (45 nm)\nMIN_SPACING=100e-9                   # Minimum spacing in meters (100 nm)\nBEND_RADIUS=5e-6                     # Minimum bend radius in meters (5 μm)\n\n# =============================================================================\n# SIMULATION TOOLS CONFIGURATION\n# =============================================================================\n\n# SPICE simulator settings\nSPICE_SIMULATOR=ngspice              # Options: ngspice, ltspice, hspice\nSPICE_PATH=/usr/bin/ngspice          # Path to SPICE executable\nSPICE_MODELS_PATH=/opt/spice-models  # Path to SPICE device models\n\n# Optical simulation settings\nOPTICAL_SOLVER=fdtd                  # Options: fdtd, bpm, eigenmode\nOPTICAL_MESH_SIZE=10e-9              # Mesh size for optical simulation (10 nm)\nOPTICAL_BOUNDARY=pml                 # Boundary conditions: pml, periodic, metal\n\n# Layout tools\nLAYOUT_TOOL=klayout                  # Options: klayout, magic, virtuoso\nKLAYOUT_PATH=/opt/klayout/bin/klayout\nMAGIC_PATH=/opt/magic/bin/magic\n\n# =============================================================================\n# DEVELOPMENT ENVIRONMENT\n# =============================================================================\n\n# Python environment\nPYTHONPATH=./src                     # Python module search path\nPYTHONDONTWRITEBYTECODE=1           # Disable .pyc file generation\nPYTHONUNBUFFERED=1                  # Unbuffered Python output\n\n# Testing configuration\nPYTEST_ADDOPTS=--tb=short --strict-markers\nCOVERAGE_THRESHOLD=80                # Minimum test coverage percentage\nTEST_PARALLEL_WORKERS=auto          # Number of parallel test workers\n\n# Jupyter configuration\nJUPYTER_PORT=8888                    # Jupyter Lab port\nJUPYTER_TOKEN=                       # Leave empty for auto-generated token\nJUPYTER_ALLOW_ROOT=1                 # Allow running as root in containers\n\n# =============================================================================\n# OUTPUT AND LOGGING\n# =============================================================================\n\n# Output directories\nOUTPUT_DIR=./outputs                 # Default output directory\nLAYOUT_DIR=./layouts                 # GDS layout files directory\nSIMULATION_DIR=./simulation_data     # Simulation results directory\nREPORT_DIR=./reports                 # Analysis reports directory\n\n# Logging configuration\nLOG_LEVEL=INFO                       # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL\nLOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s\nLOG_FILE=./logs/photonic_sim.log     # Log file path\nLOG_MAX_SIZE=10MB                    # Maximum log file size\nLOG_BACKUP_COUNT=5                   # Number of backup log files\n\n# Debug flags\nDEBUG_OPTICAL_SIMULATION=false       # Enable detailed optical simulation logging\nDEBUG_LAYOUT_GENERATION=false        # Enable layout generation debugging\nDEBUG_SPICE_SIMULATION=false         # Enable SPICE simulation debugging\nVERBOSE_OUTPUT=false                 # Enable verbose console output\n\n# =============================================================================\n# PERFORMANCE AND RESOURCES\n# =============================================================================\n\n# Parallel processing\nNUM_CORES=auto                       # Number of CPU cores to use (auto = all available)\nMAX_MEMORY_GB=8                      # Maximum memory usage in GB\nGPU_ACCELERATION=auto                # Enable GPU acceleration if available\n\n# Caching\nENABLE_CACHE=true                    # Enable simulation result caching\nCACHE_DIR=./cache                    # Cache directory\nCACHE_MAX_SIZE=1GB                   # Maximum cache size\nCACHE_TTL=86400                      # Cache time-to-live in seconds (24 hours)\n\n# Temporary files\nTEMP_DIR=/tmp/photonic_sim           # Temporary files directory\nCLEANUP_TEMP=true                    # Automatically cleanup temporary files\n\n# =============================================================================\n# CLOUD AND DISTRIBUTED COMPUTING\n# =============================================================================\n\n# Cloud simulation settings (optional)\nCLOUD_PROVIDER=                      # Options: aws, gcp, azure, local\nCLOUD_REGION=                        # Cloud region for computation\nCLOUD_INSTANCE_TYPE=                 # Instance type for cloud simulation\n\n# Distributed computing\nDISTRIBUTED_BACKEND=                 # Options: dask, ray, mpi\nWORKER_NODES=1                       # Number of worker nodes\nWORKER_MEMORY=4GB                    # Memory per worker\n\n# =============================================================================\n# SECURITY AND AUTHENTICATION\n# =============================================================================\n\n# API keys and tokens (keep these secure!)\nFOUNDRY_API_KEY=                     # Foundry API key for design rule access\nCLOUD_ACCESS_KEY=                    # Cloud provider access key\nCLOUD_SECRET_KEY=                    # Cloud provider secret key\n\n# License servers\nLICENSE_SERVER=                      # License server for commercial tools\nFLOATING_LICENSE=true                # Use floating licenses\n\n# =============================================================================\n# ADVANCED CONFIGURATION\n# =============================================================================\n\n# Experimental features\nENABLE_ML_OPTIMIZATION=false         # Enable machine learning-based optimization\nENABLE_QUANTUM_SIMULATION=false      # Enable quantum-photonic simulation features\nENABLE_3D_LAYOUT=false               # Enable 3D layout generation\n\n# Custom extensions\nCUSTOM_COMPONENTS_PATH=./custom       # Path to custom component definitions\nCUSTOM_SOLVERS_PATH=./solvers        # Path to custom simulation solvers\nPLUGIN_PATH=./plugins                # Path to framework plugins\n\n# Integration settings\nEDA_TOOL_INTEGRATION=false           # Enable EDA tool integration\nCLOUD_STORAGE_SYNC=false             # Sync results to cloud storage\nVERSION_CONTROL_INTEGRATION=true     # Enable Git integration for design tracking\n\n# =============================================================================\n# TROUBLESHOOTING AND DIAGNOSTICS\n# =============================================================================\n\n# Diagnostic settings\nGENERATE_DIAGNOSTICS=false           # Generate diagnostic reports\nPROFILE_PERFORMANCE=false            # Enable performance profiling\nMEMORY_PROFILING=false               # Enable memory usage profiling\nSAVE_INTERMEDIATE_RESULTS=false      # Save intermediate simulation results\n\n# Error handling\nSTRICT_MODE=false                    # Enable strict error checking\nFAIL_ON_WARNINGS=false               # Treat warnings as errors\nRETRY_FAILED_SIMULATIONS=3          # Number of retry attempts for failed simulations\n\n# =============================================================================\n# NOTES\n# =============================================================================\n# \n# 1. Copy this file to .env in your project root\n# 2. Uncomment and modify the values you need\n# 3. Never commit .env files with sensitive information\n# 4. Use quotes around values with spaces\n# 5. Boolean values should be: true/false (lowercase)\n# 6. Paths can be absolute or relative to project root\n# 7. Memory and size values support units: KB, MB, GB, TB\n# 8. Time values support units: s, m, h, d for seconds, minutes, hours, days\n#\n# For more information, see: docs/configuration.md\n# =============================================================================